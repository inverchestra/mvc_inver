 @using System.Web.Optimization
@model InnDocs.iHealth.Web.UI.Models.UserInformation
@{
    ViewBag.Title = "ChangePassword";
    Layout = "~/Views/Shared/Common_Layout.cshtml";


}
@section scripts{
    <script type="text/javascript">
        //    $(document).ready(function () {
        //        var userid = window.location.href.substr(window.location.href.lastIndexOf("=") + 1);
        //       
        //        //$('input:hidden').val(userid);
        //    });
        $(function () {
            $('#reset').click(function () {
                var password = $("#password").val().length;
                if (password < 6) {
                    alert("Password should be minimum 10 characters.");

                    return false;
                }
                else {
                    var a = $('#subscription_order_form').serialize();
                    $.ajax({
                        type: 'post',
                        url: '/ChangeNewPassword/ChangeNewPassword',
                        data: a,
                        success: function (data) {
                            setTimeout(function () {
                                window.location = "/";
                            });
                            alert(data);
                        }
                    });
                }
            });
        });


    </script>
}
<div class="container">
    <form id="subscription_order_form" method="post">
    <input type="hidden" name="UserId" value="@ViewBag.UserId" />
    <div>
        <img src="../../Content/img/small.png" class="well" width="100px" height="100px" />
    </div>
    <div class="span2">
    </div>
    <div class="span6 well" style="box-shadow: 0 0 5px #888888; margin-top: 100px">
        <div class="modal-header">
        </div>
        <div class="modal-body">
            <span style="font-weight: 500">Please enter your new password:</span>
            <input type="password" id="password" name="NewPassword" placeholder="Enter New Password"
                title="Your new password" style="width:30%; margin:0" />
            <input type="button" id="reset" name="name" value="Reset" class="btn btn-success" />
            <a href="/Home/Home" class="btn btn-primary">Cancel</a>
        </div>
    </div>
    <div class="span3">
    </div>
    </form>
