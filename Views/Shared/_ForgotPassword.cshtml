@using CaptchaMvc.HtmlHelpers;
@model InnDocs.iHealth.Web.UI.Models.LoginAndSignUp
@{
    ViewBag.Title = "ForgotPassword";
        //List<SelectListItem> Countries = Page.Value.CountryList;
}


<form id="forgotform" action="@Url.Action("ForgotPassword", "Home")" method="post">

    <div id="register">
    <div id="rhead" style="padding-left:10px;">
        <h3>
            Forgot Password</h3>
    </div>
    <div id="rbody">
                       @Html.TextBoxFor(Model => Model.IHealthUser.EmailId, new { @placeholder = "Enter Email", @class = "logintxts" })
                       <div style="padding-left:100px;">
                        @Html.Captcha(5)
                        </div>
                        <div style="margin-top: 10px;">
                            <label style="font-weight: bold; color: Green;">@ViewBag.Message</label>
                        </div>
                        <div style="margin-top: 10px;">
                        <input type="submit" value="Submit" id="btnSubmit" />
                         <input id="btnCancel1" type="button" value="Cancel" />
                         </div>
    </div>
</div>
