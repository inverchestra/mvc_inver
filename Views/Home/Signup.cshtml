@using System.Web.Optimization
@using InnDocs.iHealth.Web.UI.Models
@model InnDocs.iHealth.Web.UI.Models.SingleRegisterModel
@{
   
    SingleRegisterModel obj = new SingleRegisterModel();
    
}
<form id="signup" action="/Home/Signup" method="post" novalidate="novalidate">
<div class="modal-header" style="border:none">
    <a class="close" data-dismiss="modal">&times;</a>
    <h3 style="text-align:center; padding-left:30px">
        Join us!</h3>
</div>
<div class="modal-body" style="border:none">
    <div class="span2" style="border-right: 1px solid #eee;">
        
    </div>
    <div class="span3">
        <div class="control-group" style="margin-bottom: 20px; color: black">
            Login with facebook &nbsp; <a href="@Url.Action("Facebook", "Account")">
                <img src="../../Content/img/facebook-login.png" width="60px" /></a>
        </div>
        <div class="control-group">
            <div class="input-prepend">
                <span class="add-on"><i class="icon-user"></i></span>
                @Html.TextBoxFor(m => m.RUserName, new { @class = "span2", @placeholder = "Name" })
            </div>
        </div>
        <div class="control-group">
            <div class="input-prepend">
                <span class="add-on"><i class="icon-envelope"></i></span>
                @Html.TextBoxFor(m => m.EmailId, new { @class = "span2", @placeholder = "Email/Phone number" })
            </div>
        </div>
        <div class="control-group">
            <div class="input-prepend">
                <span class="add-on"><i class="icon-lock"></i></span>
                @Html.PasswordFor(m => m.Password, new { @class = "span2", @placeholder = "Password", id = "txtpassword" })
            </div>
        </div>
        <div class="control-group">
            <div class="input-prepend">
                <span class="add-on"><i class="icon-lock"></i></span>
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "span2", @placeholder = "Re-enter password" })
            </div>
        </div>
        <label style="font-weight: bold; color: Red; font-size: 10px;">@ViewBag.ErrorMessage</label>
    </div>
</div>
<div class="modal-footer" style="background:rgba(245,245,245,0.5) !important; border:none !important">
    <input type="submit" class="btn btn-success pull-right" value="Continue" />
<a class="btn pull-right" data-dismiss="modal" style="margin-right:5px">Close</a>

<p class="term_checkbox"><input type="checkbox" role="checkbox" name="agree" style="float:left; margin-right:5px" /><a href="@Url.Action("terms","home")">Terms of Use</a></p>

</div>
