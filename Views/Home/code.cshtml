<form id="confirmota" action="/Home/confirmcode" method="post">

    <div class="modal-header" style="border:none">
        <h3>Confirmation</h3>
        <label style="color: red; font-size: small; margin-top:20px">* @ViewBag.ErrorMessage</label>
    </div>
    <div class="modal-body">
        <span>Please enter your confirmation code:</span>
        <input type="text" name="otacode" placeholder="Confirmation code" style="margin: 0; width:150px" />
        <input type="hidden" name="userid" value="@ViewBag.UserId" />
           <input type="submit" class="btn btn-primary" value="Submit" />
         <div style="margin-top: 10px">
            <a href="/Home/ResendCode?UserId=@ViewBag.UserId">Resend confirmation code</a>
        </div> 
    </div>
    
    <div class="modal-footer">
        @if (Request.IsAjaxRequest()) {
            <a class="btn" data-dismiss="modal">Close</a>
        }
        </div>

</form>
