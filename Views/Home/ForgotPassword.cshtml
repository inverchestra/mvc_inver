@using System.Web.Optimization
@using CaptchaMvc.HtmlHelpers
@model InnDocs.iHealth.Web.UI.Models.ForgotPassword
@{
    ViewBag.Title = "";
}
@Scripts.Render("~/bundles/ajaxforgotpwd")
@using (Ajax.BeginForm("ForgotPassword", "Home", new AjaxOptions() { HttpMethod = "POST", OnSuccess = "closeModal", OnFailure = "displayError", OnBegin = "loading" }))
{
    
    <style type="text/css">
        label.error, .field-validation-error > span {
            margin-left: 0;
        }
    </style>
    
    <div id="register">
        <div class="modal-header">
            <a class="close" data-dismiss="modal">&times;</a>
            <h4>
                Forgot Password?</h4>
        </div>
        <div class="modal-body">
            <p>
                Please enter your email address or your phone number to reset your password.
            </p>
            <div class="control-group">
                <div class="input-prepend">
                    <span class="add-on"><i class="icon-envelope"></i></span>
                    @Html.TextBoxFor(Model => Model.EmailId, new { @placeholder = "Enter valid email", @class = "logintxts" })
                </div>
                @Html.ValidationMessageFor(model => model.EmailId)
            </div>
            @*<label style="color: red; font-size: small; margin-top:20px">@ViewBag.ErrorMessage</label>*@
            <label style="color: red; font-size: small; margin-top:20px">@Html.Raw(ViewBag.ErrorMessage)</label>

        </div>
        <div class="modal-footer">
            <input type="submit" class="btn btn-success" value="Submit" />
            <a class="btn" data-dismiss="modal">Close</a>
        </div>
    </div>
}
