    <form id="signup1" action="/Home/Signup" method="post">
   
        <div class="span3"></div>

    <div class="span6 well" style="box-shadow: 0 0 5px #888888; margin-top:20px; margin-left:50px">
        <div class="modal-header">
            <h3>
                Forgot Password?</h3>
        </div>
        <div class="modal-body">
            <div class="span2" style="border-right: 1px solid #eee; height: 200px">
                Register content is display here. It might be either image or textual content. Presently
                it is just text here.
            </div>
            <div class="span3" >
            <div class="control-group" style="margin-bottom:20px; color:gray">
Login with facebook &nbsp; <a href="@Url.Action("Facebook", "Account")">
<img src="../../Content/img/facebook-login.png" width="60px" /></a>
</div>

                <div class="control-group">
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-user"></i></span>
                           @Html.TextBoxFor(m => m.RUserName , new { @class = "span2", @placeholder = "Name" })
                    </div>
                </div>
                <div class="control-group">
                    <div class="input-prepend">
                        <span class="add-on"><i class="icon-envelope"></i></span>
                          @Html.TextBoxFor(m => m.EmailId, new { @class = "span2", @placeholder = "Email/Phone number" })
                    </div>
                </div>
                <div class="control-group">
                    <div class="input-prepend">
                        <span class="add-on">P</span>
                         @Html.PasswordFor(m => m.Password, new { @class = "span2", @placeholder = "Password" })
                    </div>
                </div>
                <div class="control-group">
                    <div class="input-prepend">
                        <span class="add-on">RP</span>
                     @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "span2", @placeholder = "Re-enter password" })
                    </div>
                </div>
                 <label style="font-weight: bold; color: Red;font-size:10px;">@ViewBag.ErrorMessage</label>
            </div>
        </div>
        <div class="modal-footer">
           <input type="submit" class="btn btn-success" value="Continue" />
            <a href="/Home/Home" class="btn btn-primary">Back</a>
        </div>
    </div>
    
    </form>

