@using InnDocs.iHealth.Web.UI.Areas.HospitalUser.Models.HospitalOnBoundary
@model InnDocs.iHealth.Web.UI.Models.UserInformation


<div class="bluegrad" style="width: 400px;">
    @using (Html.BeginForm("AddPatientToDoctor", "HospAdmin", new { @class = "bluegrad" }))
    {
        @Html.ValidationSummary(true)
        <div>
            <div id="rhead" style="border-bottom: 1px solid rgb(218,221,226);">
                <h3>
                    Assign Patient To Doctor</h3>
            </div>
            <div id="rbody" class="Payment">
                <ul>
                    <li class="labelnormal">PatientMail ID</li>
                    <li class="payment_txtbx">@* <input type="hidden" value="@Model.UserId" name="DeptId" />*@
                        <input type="hidden" value="@Model.EmailId" name="HospitalInfoId"/>
                        <input type="hidden" value="@Model.UserId" name="UserId" />
                        <select id="s3" name="Patients" multiple="multiple" tabindex="4">
                            @if (Model.doctors == null || Model.doctors.Count == 0)
                            {
                                <option disabled="disabled">--No Logs--</option>
                            }
                            else
                            {

                                foreach (var value in Model.doctors)
                                {
                                <option value="@value.Value">@value.Text </option>  
                                }
                            }
                        </select>
                    </li>
                    <li class="labelnormal"></li>
                    <li class="payment_txtbx">
                        <div style="width: 100%; float: right; margin: 0 7px 0 0;" class="inline">
                            <input type="button" class="graygrad" value="close" onclick="$.modal.close();" />
                            <input id="btnsubmit" type="submit" value="Update" class="greengrad" />
                        </div>
                    </li>
                </ul>
            </div>
        </div>
    }
</div>
