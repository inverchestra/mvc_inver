@model InnDocs.iHealth.Web.UI.Areas.iHealthUser.Models.UserRepository.PostComments
<!-- Add fancyBox -->
<link href="../../../../Content/jquery.fancybox.css" rel="stylesheet" type="text/css" />
<script src="../../../../CustomScripts/jquery.fancybox.pack.js" type="text/javascript"></script>
<script type="text/javascript">
    $(function () {

        // $(".fancybox").fancybox();
        $(window).load(function () {

            $(".fancybox").fancybox({
                // helpers: {
                // thumbs: {
                // width: 50,
                // height: 50
                // }
                // }
                helpers: {
                    overlay: {
                        css: {
                            'background': 'url("/Images/overlay.png") repeat scroll 0 0 rgba(0, 0, 0, 0)',
                            'opacity': '0.9'

                        }
                    }
                }
            });
        });

    });
</script>
<div id="@Model.Week">
    @if (ViewBag.Currentday < 280)
    {
        <ul id="update1">
            @if (Model.lstComments != null)
            {
                foreach (var post in Model.lstComments)
                {
                <li class="listyle">
                    <div>
                        @Html.Raw(@post.Comment)
                    </div>
                    @if (post.path != "" && post.path != null)
                    {
                        var fileName = post.path.Substring(post.path.LastIndexOf(("/")) + 1); 
                        <div style="height: 60px">
                            <a class="fancybox" href="~/CommentImages/@fileName">
                                <img src="~/CommentsImages/@post.path" alt="" style="margin: 8px 4px 0; float:right; object-fit: cover; overflow: hidden; object-position: top 100%; height:50px" />
                            </a>
                        </div>
                    }
                    <span style="float: right; color: Gray; font-size: smaller; margin-right: 2px">
                        @post.Postdate
                    </span></li>
                }
            }
        </ul>
    }
    else
    {
        <img src="~/picture/with%20ribbon.jpg" />
    }
</div>
