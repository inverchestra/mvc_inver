@model InnDocs.iHealth.Web.UI.Areas.iHealthUser.Models.UserRepository.Questions
@{
    ViewBag.title = "";
}
<div class="bluegrad" style="width: 400px;">
    <form id="subscription_order_form" class="" method="post" enctype="multipart/form-data">
    <div>
        <div id="rhead" style="border-bottom: 1px solid rgb(218,221,226);">
            <h3>
                Questions</h3>
        </div>
        <div id="rbody" class="Payment">
            <ul>
                <div>
                    <span style="float: left; color: Gray">Question: </span><span style="padding-left: 10px">@Model.Question</span>
                </div>
                @if (Model.ResponseType == "input")
                {

                    <input type="text" name="BranchName" title="Name of the branch" tabindex='1' placeholder="Enter your answer here"
                        id="textanswer" class="logintxts" />


                }
                else if (Model.ResponseType == "boolean")
                {

                    <li>
                        <div style="float: right; margin-right">
                            <input type="radio" name="colors" id="blue" checked="checked" />Yes
                            <input type="radio" name="colors" id="green" />No</div>
                    </li>

                }
                else
                {
                    <div style="padding-left: 60px; padding-top: 10px">
                        <div>
                            <input type="radio" name="colors" id="blue1" checked="checked" />Yes
                            <input type="radio" name="colors" id="green1" />No
                        </div>
                    </div>
                    <div style="padding-left: 60px; padding-top: 10px">
                        <input type="text" name="BranchName" title="Name of the branch" tabindex='1' placeholder="Enter your answer here"
                            id="textanswer1" class="logintxts" />
                    </div>
                }
                <li class="labelnormal"></li>
                <li class="payment_txtbx">
                    <div style="width: 100%; float: right; margin: 0 7px 0 0; padding-top: 10px" class="inline">
                        <input type="button" class="graygrad" value="close" onclick="$.modal.close();" />
                        <input type="button" value="Submit" name="savebranch1" id="savebranch" class="greengrad" />
                    </div>
                </li>
            </ul>
        </div>
    </div>
    </form>
</div>
