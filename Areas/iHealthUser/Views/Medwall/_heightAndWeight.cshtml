@model InnDocs.iHealth.Web.UI.Areas.iHealthUser.Models.Vitals.Vitals
@{
    ViewBag.Title = "";
}
<script type="text/javascript">

    $(function () {
        $("#btnHnW").click(function () {
            $.ajax({
                url: '/iHealthUser/Medwall/HnWEdit',
                type: 'GET',
                success: function (result) {
                    $.modal.close();
                    $('#ajaxtab').html(result).modal({
                        escClose: true,
                        closeHTML: "",
                        onShow: function (e) {
                            e.container.css({ 'height': 'auto', 'width': 'auto' });
                        }
                    });
                }
            });
        });

    });




</script>
<div>
    <form id="subscription_order_form" class="" method="post" enctype="multipart/form-data">
    <div id="rhead">
        <div style="width: 100%; margin: 0 0 0 10px">
            @if (Model.HnW != null && Model.HnW.date != "")
            {
                <label>
                    Recent updation on:
                </label>
                <label style="color: Red">
                    (@Html.DisplayTextFor(model => model.HnW.CreatedOn) )</label>
            }
        </div>
        <div class="vitals">
            <ul>
                @if (Model.LstHnW.Count == 0 && Model.MedInfo.BMIWeight == null && Model.MedInfo.BMIHeight == null && Model.MedInfo.BloodGroup == null && Model.MedInfo.BloodPressure == null)
                {
                    <li>No data is available</li>
                }
                else
                {
                    <li>
                        <div style="">
                            <div style="width: 25%; display: inline-block; background-color: #f7f7f7">
                                Height(cm)
                            </div>
                            @if (Model.HnW.Height != null)
                            {
                                <div style="width: 40%; display: inline-block">
                                    @Html.DisplayFor(model => model.HnW.Height)
                                </div>
                            }
                            else
                            {
                                <div style="width: 40%; display: inline-block">
                                    @Html.DisplayFor(model => model.MedInfo.BMIHeight)
                                </div>
                            }
                        </div>
                    </li>
                    <li>
                        <div>
                            <div style="width: 25%; display: inline-block; background-color: #f7f7f7">
                                Blood group
                            </div>
                            @if (Model.HnW.BloodGroup != null)
                            {
                                <div style="width: 40%; display: inline-block">
                                    @Html.DisplayFor(model => model.HnW.BloodGroup)
                                </div>
                            }
                            else
                            {
                                <div style="width: 40%; display: inline-block">
                                    @Html.DisplayFor(model => model.MedInfo.BloodGroup)
                                </div>
                            }
                        </div>
                    </li>
                    <li>
                        <div style="">
                            <div style="width: 25%; display: inline-block; background-color: #f7f7f7">
                                Weight(lbs)
                            </div>
                            @if (Model.HnW.Weight != null)
                            {
                                <div style="width: 46%; display: inline-block">
                                    @Html.DisplayFor(model => model.HnW.Weight)
                                </div>
                                <div style="width: 10%; display: inline-block">
                                    @* <input id="btnWeightTrend" type="button" value="Trend" class="graygrad" style="float: none" />*@
                                </div>

                            }
                            else
                            {
                                <div style="width: 40%; display: inline-block">
                                    @Html.DisplayFor(model => model.MedInfo.BMIWeight)
                                </div>
                            }
                        </div>
                    </li>

                    <li>
                        <div style="border-bottom: 1px solid #f0f0f0">
                            <div style="width: 25%; display: inline-block; background-color: #f7f7f7">
                                Blood pressure
                            </div>
                            @if (Model.HnW.BloodPressure != null)
                            {
                                <div style="width: 46%; display: inline-block">
                                    @Html.DisplayFor(model => model.HnW.BloodPressure)
                                </div>
@*<div style="width: 10%; display: inline-block">
<input id="btnBPTrend" type="button" value="Trend" class="graygrad" style="float: none" />
</div>*@
                            }
                            else
                            {
                                <div style="width: 40%; display: inline-block">
                                    @Html.DisplayFor(model => model.MedInfo.BloodPressure)
                                </div>
                            }
                        </div>
                    </li>

                }
                <li style="width: 100%; margin-top: 10px" class="inline"><a href="@Url.Action("VitalsNew", "Medwall")" style="color:#0088cc">
                    Back</a>
                    <div style="float: right;" class="inline">
                        <input id="btnHnW" type="button" class="greengrad" value="Newdata" style="margin-right: 10px" />
                    </div>
                </li>
            </ul>
        </div>
    </div>
    </form>
</div>
