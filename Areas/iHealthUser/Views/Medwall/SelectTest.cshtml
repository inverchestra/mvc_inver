@using InnDocs.iHealth.Web.UI.Areas.iHealthUser.Models.UserRepository
@model InnDocs.iHealth.Web.UI.Areas.iHealthUser.Models.UserRepository.Tests
@{
    ViewBag.Title = "SelectTestType";
    Tests obj = new Tests();
    List<SelectListItem> Ttypes = obj.TestTypes();
}
<script type="text/javascript">
    $(document).ready(function () {
        $("#btnCont").click(function () {





            var drop = $('#Testdrop').val();


            if ($('#Testdrop').val() == "") {
                alert("Please select one item");
            }
            else if ($('#Testdrop').val() == "Blood") {
                //                    alert("Hi Family");
                document.getElementsByName('TType').value = $('#Testdrop').val();

                var val1 = document.getElementsByName('TType').value;

                $.modal.close();
                $('#ajaxtab').empty();
                $.ajax({
                    url: '/iHealthUser/Medwall/CBPView',
                    type: 'GET',
                    data: { value1: val1 },
                    success: function (result) {
                        $.modal.close();
                        $('#ajaxtab').html(result).modal({
                            escClose: true,
                            closeHTML: ""
                        });
                    }
                });
            }
            else if ($('#Testdrop').val() == "UrineTest") {
                //                    alert("Hi Family");
                document.getElementsByName('TType').value = $('#Testdrop').val();

                var val1 = document.getElementsByName('TType').value;

                $.modal.close();
                $('#ajaxtab').empty();
                $.ajax({
                    url: '/iHealthUser/Medwall/AddComplUrine',
                    type: 'GET',
                    data: { value1: val1 },
                    success: function (result) {
                        $.modal.close();
                        $('#ajaxtab').html(result).modal({
                            escClose: true,
                            closeHTML: ""
                        });
                    }
                });
            }
            else if ($('#Testdrop').val() == "Seerum") {
                //                    alert("Hi Family");
                document.getElementsByName('TType').value = $('#Testdrop').val();

                var val1 = document.getElementsByName('TType').value;

                $.modal.close();
                $('#ajaxtab').empty();
                $.ajax({
                    url: '/iHealthUser/Medwall/SerumTest',
                    type: 'GET',
                    data: { value1: val1 },
                    success: function (result) {
                        $.modal.close();
                        $('#ajaxtab').html(result).modal({
                            escClose: true,
                            closeHTML: ""
                        });
                    }
                });
            }


        });
    });
</script>
<h2>
    SelectTestType</h2>
<ul>
    <li class="labelnormal" style="margin-left: 3%; width: 90%;">
        <div style="width: 100%; padding: 10px; color: rgb(89,89,89); font-size: 12px; font-weight: bold">
            <div style="float: left; width: 40%;">
                Select TestType:
            </div>
            <div style="display: inline-block; width: 60%;">
                @Html.DropDownListFor(model => model.TestType, Ttypes, new { @id = "Testdrop", @class = "Reg_Details_select" })
            </div>
        </div>
    </li>
    <li class="labelnormal" style="width: 97%; margin: 10px 0 0 0;">
        <input type="button" value="Cancel" class="graygrad_FP" onclick="$.modal.close();" />
        <input type="button" value="Continue" id="btnCont" class="greengrad_FP" style="margin-right: 10px" />
    </li>
</ul>
