        $('INPUT[type="file"]').change(function () {
            var ext = this.value.match(/\.(.+)$/)[1];
            var text = ext.toUpperCase();

            switch (text) {
                case 'JPG':
                case 'JPEG':
                case 'PNG':
                case 'GIF':
                    break;
                default:
                    alert('Invalid image format.');
                    this.value = '';
            }
        });

        $('input[name="cancel"]').click(function () {
            $.modal.close();
        });
        $('#fileUploaddays').click(function () {

            var dayid = $("#dropday").val();
            var filevalue = $('#fileid').val();
            if (dayid == "") {
                alert('Please select day');
                return false;
            } else if (filevalue == "") {
                alert('Please select image to upload');
                return false;
            }
            $.ajax({
                type: "POST",
                url: "/iHealthUser/Medwall/ImagePostByDay",
                aync: false,
                cache: false,
                data: new FormData($(this).parents('#frmpost').get(0)),
                contentType: false,
                processData: false,
                success: function (data) {
                    alert("Image Uploaded successfully");
                    $.modal.close();
                    location.reload();
                    $('#file').val("");
                    if (!data) {
                        $("#flash").hide();
                    } else {
                        document.getElementById('content').value = '';
                        $("#flash").hide();
                        $('#contentposts').empty();
                        $('#contentposts').html(data);
                        $('#contenttext').val("");
                    }
                }
            }).fail(function () { alert("Somethings worng, cannot post !"); });

            return false;
        });
    });

   
    
</script>
