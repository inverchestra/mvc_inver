@model InnDocs.iHealth.Web.UI.Models.PromoCode
@{
    ViewBag.Title = "EditPCode";
}
<link href="http://code.jquery.com/ui/1.10.0/themes/base/jquery-ui.css" rel="stylesheet" />
<script type="text/javascript">
    $('#tbExpireOn').datepicker({

        changeYear: true,
        changeMonth: true,
        minDate: 0,
        onSelect: function () {
            UpdateStartDate();
        }
    });


</script>
@Scripts.Render("~/bundles/PCode")
<div id="AddUserDiv" class="bluegrad" style="width: 400px;">
    @*<form id="Edit-form" action="@Url.Action("SubmitEditedPCode", "Administration")">*@
    @using (Ajax.BeginForm("SubmitEditedPCode", "Administration", new AjaxOptions() { HttpMethod = "POST", OnSuccess = "closeModal", OnFailure = "displayError", OnBegin = "loading" }, new { @class = "bluegrad" }))
    {
        <div id="register">
            <div id="rhead" style="border-bottom: 1px solid rgb(218,221,226);">
                <h3>
                    Edit Promotional Code</h3>
            </div>
            <div id="rbody" class="Payment">
                <input type="hidden" name = "PromoCodeId" value="@Model.PromoCodeId" />
                <ul>
                    <li class="labelnormal">Promotional code<text style="color: Red">*</text>
                    </li>
                    <li class="payment_txtbx">@*<input type="text" id="tbPCode" name="PromoCodes" value="@Model.PromoCodes" class="create-logtxts" required/>*@
                        @Html.TextBoxFor(model => model.PromoCodes, new { @class = "create-logtxts", title = "Enter Promo Code" })
                        @Html.ValidationMessageFor(model => model.PromoCodes)
                    </li>
                    <li class="labelnormal">Code user<text style="color: Red">*</text> </li>
                    <li class="payment_txtbx">@* <input type="text" id="tbCodeUser" name="CodeUser" value="@Model.CodeUser" class="create-logtxts" required/>*@
                        @Html.TextBoxFor(model => model.CodeUser, new { @class = "create-logtxts", title = "Enter Code User" })
                        @Html.ValidationMessageFor(model => model.CodeUser)
                    </li>
                    <li class="labelnormal">Expire on<text style="color: Red">*</text> </li>
                    <li class="payment_txtbx">@*<input type="text" id="tbExpireOn" name="ExpireOn" value="@Model.ExpireOn" class="create-logtxts" required/>*@
                        @Html.TextBoxFor(model => model.ExpireOn, new { @class = "create-logtxts", title = "Enter Expire Date", id = "tbExpireOn" })
                        @Html.ValidationMessageFor(model => model.ExpireOn)
                    </li>
                    <li class="labelnormal">&nbsp;</li>
                    <li class="payment_txtbx">
                        <div style="width: 100%" class="inline">
                            <input type="button" id="btnCancel" value="Cancel" style="float: right" class="graygrad"
                                onclick="$.modal.close();" />
                            <input type="submit" id="btnSubmit" style="float: right; margin-right: 10px" value="Submit"
                                class="greengrad" />
                        </div>
                    </li>
                </ul>
            </div>
        </div>
       
@*</form>*@
    }
</div>
