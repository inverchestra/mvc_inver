@model InnDocs.iHealth.Web.UI.Models.LoginAndSignUp
@{
    ViewBag.Title = "PromoCodes";
                    // int i = 0;
}
<h2 class="dvd" style="text-align: left; margin: 20px 0 0 0;">Manage PromoCodes
    <span style="float: right; display: inline-block;">
        <a id="archivePCode" class="greengrad">Archive</a>
        <a id="createPCode" class="greengrad">Create Promo Code</a>
    </span>
</h2>
<script src="~/CustomScripts/Administration.js" type="text/javascript"></script>
<br />
<div id="ViewPCode">
    <div style="float: right; display: inline-block;">
    </div>

    <table id="thead">
        <thead>
            <tr>
                <th style="width: 15%; padding-left: 18px">Promo code
                </th>
                <th style="width: 15%; padding-left: 18px">Code users
                </th>
                <th style="width: 15%; padding-left: 18px">Expire on
                </th>
                <th style="width: 15%; padding-left: 18px"></th>
            </tr>
        </thead>
    </table>
    <div style="display: block; width: 100%; height: 440px; overflow: auto;">
        <table id="pra">
            <tbody>
                @foreach (var PCodeInfo in Model.ListPromoCodes)
                {
                    <tr>
                        <td style="width: 15%; padding-left: 18px">@PCodeInfo.PromoCodes
                        </td>
                        <td style="width: 15%; padding-left: 18px">@PCodeInfo.CodeUser
                        </td>
                        @* <td class="w20">@PCodeInfo.CreatedOn
                        </td>*@
                        <td style="width: 15%; padding-left: 18px">@PCodeInfo.ExpireOn
                        </td>
                        <td style="width: 15%; padding-left: 18px">
                            @{if (!PCodeInfo.IsDeleted)
                              {
                                <input type="text" name="EditPCode" class="Usermg_txt" readonly="readonly" onfocus="this.blur();"
                                    value="Edit" />
                                <input type="text" name="delPCode" class="Usermg_txt" readonly="readonly" onfocus="this.blur()"
                                    value="Delete" />
                              }
                              else
                              {
                                <input type="text" name="EditPCode" class="Usermg_txt_disable" readonly="readonly"
                                    onfocus="this.blur();" value="Edit" disabled="disabled" />
                                <input type="text" name="delPCode" class="Usermg_txt_disable" readonly="readonly"
                                    onfocus="this.blur()" value="Deleted" disabled="disabled" />
                              }
                            }
                            <input type="hidden" class = "PCodeId" value="@PCodeInfo.PromoCodeId"/>
                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
