        @Html.ActionLink("< Prev", "GetSearchedProcDocuments", new { page = Model.PageNumber - 1, searchtext1 = ViewBag.FromSearch }, new { @class = "prev" })
        }
        else
        {
                
        @Html.Raw(" ");

        }
    }
    else
    {
        if (Model.HasPreviousPage)
        {
