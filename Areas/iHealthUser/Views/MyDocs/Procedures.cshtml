                    //                    data: { DocumentId: id },
                    //                    success: function (data) {
                    //                        $('#tab').html(data).modal();
                    //                    }
                    //                });
                    alert("Please select any document to view");
                    return false;
                }
            }
        });
        //frdelete

        $('input[name="btnProcDelete"]').click(function () {
            var tr = $('#proctable table tbody tr:nth-child(n+1)').filter(':has(:checkbox:checked)');
            var Did = $('#procView').val();
