@model InnDocs.iHealth.Web.UI.Models.UserInformation
@{
    ViewBag.Title = "EditUserInfo";
}
<div class="bluegrad" style="width: 250px;">
    @*<div style="height: 40px;">*@
    <div style="border-bottom: 1px solid rgb(218,221,226);">
        <h3>
            Edit user info</h3>
    </div>
    <div style="width: auto">
        <form id="frmEditUser">
        <input type="hidden" name="UserId" value="@Model.UserId" />
        <ul>
            @*<li style="width: 100px" class="inline">Email id</li>*@
            <li style="width: 200px;" class="inline">@* <li class="ValuePA">*@
                @if (Model.EmailId != null && Model.IsVerified)
                {
                    <input type="text" id="txtEmail" name="EmailId" value="@Model.EmailId" placeholder="Enter valid email id" readonly class="create-logtxts" />
                    <input type="checkbox" style="color:Red;margin:0px 0px 0px;width:10px;" id="chkEmail" name="IsEmail" value="true" checked="@Model.IsEmail" />
                }
                else
                {
                    <input type="text" id="txtEmail" name="EmailId" value="@Model.EmailId" placeholder="Enter valid email id" class="create-logtxts" />@*<input type="button" id="btnEmailVerify" class="greengrad" style="height:23px; width:auto; margin:-7px 103px 0px 0px;font: 600 11px 'Tauri',sans-serif;" value="Send Email" />*@
                }
            </li>
            @*<li style="width: 100px" class="inline">Contact number</li>*@
            <li style="width: 200px" class="inline">
                @if (Model.PhoneNo != null && Model.IsPhnVerified)
                {
                    <input type="text" id="txtPhoneNo" name="PhoneNo" value="@Model.PhoneNo" placeholder="Enter valid mobile number" class="create-logtxts" />                
                    <input type="checkbox" id="chkPhone" class="create-logtxts" name="IsPhone" value="true" checked="@Model.IsPhone" />
                }
                else if (Model.PhoneNo != null && !Model.IsPhnVerified)
                {
                    <input type="text" id="txtPhoneNo" name="PhoneNo" value="@Model.PhoneNo" placeholder="Enter valid mobile number" class="create-logtxts" />@*<input type="button" id="btnPhoneVerify" class="greengrad" style="height:23px; width:auto; margin:-7px 103px 0px 0px;font: 600 11px 'Tauri',sans-serif;" value="Send Verify Code" />*@
                }
                else
                {
                    <input type="text" id="txtPhoneNo" name="PhoneNo" value="@Model.PhoneNo" placeholder="Enter valid mobile number"
                        class="create-logtxts" />@*<input type="button" id="btnPhoneVerify" class="greengrad" style="height:23px; width:auto; margin:-7px 103px 0px 0px;font: 600 11px 'Tauri',sans-serif;" value="Send Verify Code" />*@
                }
            </li>
            @*<li style="width: 100px" class="inline">Preferred by</li>
            <li style="width: 200px" class="inline">
                <select id="idfrequencyTaken" name="NotificationType" style="width: 200px;" tabindex="0">
                <option>--Please Select--</option>
                <option value="Email">Email</option>
                <option value="Phone">Phone</option>
                <option value="Emailandphone">Email and Phone</option>
            </select>
            </li>*@
        </ul>
        <div style="width: 100%" class="inline">
            <button id="btnCancel" style="float: right;" class="graygrad" onclick="$.modal.close();">
                Cancel</button>
            <input type="submit" id="btnSubmitCode" style="float: right; margin-right: 10px;"
                class="greengrad" value="Save" />
        </div>
        @*<input type="button" id="btnSubmitCode" value="Save" title="Click to Save" class="greengrad"
            style="float: right; margin-right: 12px" />
        <input type="button" id="btnCancel" value="Cancel" title="Click to Cancel" class="graygrad"
            style="float: right; margin-right: 12px" onclick="$.modal.close()" />*@
        </form>
    </div>
</div>
