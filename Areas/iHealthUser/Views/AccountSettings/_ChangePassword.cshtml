@using System.Web.Optimization
@using InnDocs.iHealth.Web.UI.Models
@model InnDocs.iHealth.Web.UI.Areas.iHealthUser.Models.UserRepository.ChangePassword
@{
    ViewBag.Title = "";
}
@*<form id="ChangePassword"  action="@Url.Action("ChangePassword", "AccountSettings")" method="post" class="bluegrad">*@
@Scripts.Render("~/bundles/ajaxchngpwd")
@using (Ajax.BeginForm("ChangePassword", "AccountSettings", new AjaxOptions() { HttpMethod = "POST", OnSuccess = "closeModal", OnFailure = "displayError", OnBegin = "loading" }, new { @class = "bluegrad" }))
{
 
    @Html.ValidationSummary(true)

    <div class="PInfo" style="width: 350px;">
        <div style="border-bottom: 1px solid rgb(218,221,226); float: left; width: 100%;">
            <h2>
                Change password</h2>
        </div>
        <ul style="margin: 15px 0 0 4px;">
            <li style="display: none;">
                <input type="hidden" id="UserId" value="@Model" />
            </li>
            <li class="labelnormal">Old password:<span style="font-weight: 600; padding: 15px 0px 0px 2px;
                color: rgb(251, 2, 2); font-size: medium;">*</span> </li>
            <li class="labelbold">
                @Html.PasswordFor(model => model.oldPassword, new { @placeholder = "Old password", title = "Old password", @class = "logintxts" })
                @Html.ValidationMessageFor(model => model.oldPassword)
                @*<input type="password"  name="oldPassword" title="Your Old password" />*@
            </li>
            <li class="labelnormal">New password:<span style="font-weight: 600; padding: 15px 0px 0px 2px;
                color: rgb(251, 2, 2); font-size: medium;">*</span> </li>
            <li class="labelbold">
                @Html.PasswordFor(model => model.newPassword, new { @placeholder = "New password", title = "New password", @class = "logintxts" })
                @Html.ValidationMessageFor(model => model.newPassword)
                @*<input type="password"  name="newPassword" title="Your New password"
             />*@ </li>
            <li class="labelnormal">Confirm password:<span style="font-weight: 600; padding: 15px 0px 0px 2px;
                color: rgb(251, 2, 2); font-size: medium;">*</span> </li>
            <li class="labelbold">
                @Html.PasswordFor(model => model.confirmPassword, new { @placeholder = "Confirm password", title = "Confirm password", @class = "logintxts" })
                @Html.ValidationMessageFor(model => model.confirmPassword)
                @*<input type="password"  name="confirmPassword" title="Confirm Password"  />*@
            </li>
            <li style="width: 99%; margin: 5px 0 0 0;">
                <input type="button" class="graygrad btn_space " value="close" onclick="$.modal.close();" />
                <input id="btnSubmit" class="greengrad btn_space" type="submit" value="Submit" />
            </li>
        </ul>
        @if (ViewData["Message"] != null)
        {
        }
        <br />
        <div style="width: 100%" class="inline">
        </div>
    </div>
    
        
}
