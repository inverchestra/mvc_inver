@model InnDocs.iHealth.Web.UI.Areas.iHealthUser.Models.UserRepository.Cases
<link href="http://code.jquery.com/ui/1.10.0/themes/base/jquery-ui.css" rel="stylesheet" />
<script type="text/javascript">

    //    $('#dateOfServiceprocedure1').datepicker({
    //        changeYear: true,
    //        changeMonth: true
    //    }); // sandeep added
    $('#dateOfServiceprocedure1').datetimepicker();
    $('#dateOfServiceprocedurenotify1').datepicker({
        changeYear: true,
        changeMonth: true
    });
    $("#dateOfServiceprocedurenotify1").hide();


    $("input[type='radio']").change(function () {

        if ($(this).val() == "true") {
            $("#dateOfServiceprocedurenotify1").show();

        }

        else {
            $("#dateOfServiceprocedurenotify1").hide();
        }

    });
</script>
<div id="procedures" class="bluegrad" style="width: 495px;">
    <div style="border-bottom: 1px solid rgb(218,221,226);">
        <h3>
            Procedure</h3>
    </div>
    <form id="frmproc" enctype="multipart/form-data" class="crtproc">
    <input type="hidden" name="CaseId" id="CaseId" value="@Model.CaseId" />
    <ul style="display: inline-block; padding: 13px 13px">
        <li class="labelnormal">Procedure name:<span style="font-weight: 600; padding: 15px 0px 0px 2px;
            color: rgb(251, 2, 2); font-size: medium;">*</span> </li>
        <li>
            <input type="text" name="Procedures.ProcedureName" title="Name of procedure" tabindex='1'
                id="procname" class="create-logtxts" />
        </li>
        <li class="labelnormal">Date of service:<span style="font-weight: 600; padding: 15px 0px 0px 2px;
            color: rgb(251, 2, 2); font-size: medium;">*</span></li>
        <li>
            <input type="text" id="dateOfServiceprocedure1" name="Procedures.DateOfService" placeholder="MM/DD/YYYY"
                title="Date you service" tabindex='2' class="create-logtxts" />
        </li>
        <li class="labelnormal">Provider or facility:<span style="font-weight: 600; padding: 15px 0px 0px 2px;
            color: rgb(251, 2, 2); font-size: medium;">*</span></li>
        <li>
            <input type="text" id="provider" name="Procedures.ProviderOrFacility" class="create-logtxts"
                tabindex='3' title="Enter the hospital name " />
        </li>
        <li class="labelnormal">Surgeon:<span style="font-weight: 600; padding: 15px 0px 0px 2px;
            color: rgb(251, 2, 2); font-size: medium;">*</span></li>
        <li>
            <input type="text" id="surgeon" name="Procedures.Surgeon" class="create-logtxts"
                tabindex='4' title="Enter the doctor name" required />
        </li>
        <li class="labelnormal">Do you want to be notified?</li>
        <li>
            <input type="radio" id="r1" name="Procedures.IsNotify" value="true" required />&nbsp;Yes
            <input type="radio" id="r2" name="Procedures.IsNotify" value="false" checked="checked" />&nbsp;No
            <input type="text" id="dateOfServiceprocedurenotify1" name="Procedures.NotifyDate"
                tabindex="5" placeholder="MM/DD/YYYY" title="Notify date" pattern="(0[1-9]|1[012])[- /.](0[1-9]|[12][0-9]|3[01])[- /.]\d\d\d\d"
                class="create-logtxts inline" style="width: 134px" />
        </li>
        <li class="labelnormal">Notes:</li>
        <li>
            <textarea name="Procedures.Notes" cols="35" rows="6" title="Notes of the procedure"
                class="create-logtxts" style="height: 21px" tabindex="6"></textarea>
        </li>
        <li class="labelnormal">Add document</li>
        <li class="gap_top">@*@Html.TextBoxFor(model => model.procfiles, new { type = "file" })*@
            <input type="file" name="procfiles" multiple="multiple" tabindex="7" />
        </li>
        <li style="width: 91%" class="inline">
            <input type="button" name="cancel" tabindex="8" value="Cancel" style="float: right" class="graygrad"
                onclick="$.modal.close()" />
            <input type="button" id="btnProcSave"  tabindex="9" name="save" value="Save" style="float: right;
                margin-right: 10px;" class="greengrad" />
        </li>
    </ul>
    </form>
</div>
