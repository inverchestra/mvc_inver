@model InnDocs.iHealth.Web.UI.Areas.iHealthUser.Models.UserRepository.Cases
<link href="http://code.jquery.com/ui/1.10.0/themes/base/jquery-ui.css" rel="stylesheet" />
<div class="bluegrad" style="width: 400px; height: 350px; overflow-y: scroll; overflow-x: hidden">
    <div style="border-bottom: 1px solid rgb(218,221,226);">
        <h3>
            Medical Schedule</h3>
    </div>
    <form id="frmmed" enctype="multipart/form-data">
    <div id="medicationsd">
        <ul style="display: inline-block; padding: 13px 13px">
            <li>
                <input type="hidden" name="CaseId" id="CaseId" value="@Model.CaseId" />
            </li>
            <li>
                <div class="tldiv" style="width: 35%">
                    <h6>
                        Date first prescribed:</h6>
                </div>
                <div class="trdiv" style="width: 55%">
                    <input type="text" name="MedicalSchdule.DatePrescribed" placeholder="MM/DD/YYYY"
                        id="datePrescribed3" title="the day to start the medications" pattern="(0[1-9]|1[012])[- /.](0[1-9]|[12][0-9]|3[01])[- /.]\d\d\d\d"
                        class="create-logtxts" required />
                </div>
            </li>
            <li>
                <div class="tldiv" style="width: 35%">
                    <h6>
                        Date dispensed:</h6>
                </div>
                <div class="trdiv" style="width: 55%">
                    <input type="text" id="dateDispensed3" name="MedicalSchdule.Dispensed" placeholder="MM/DD/YYYY"
                        title="the day to stop the medications" pattern="(0[1-9]|1[012])[- /.](0[1-9]|[12][0-9]|3[01])[- /.]\d\d\d\d"
                        class="create-logtxts" required />
                </div>
            </li>
            <li>
                <div class="tldiv" style="width: 35%">
                    <h6>
                        Pharmcy name</h6>
                </div>
                <div class="trdiv" style="width: 55%">
                    <input type="text" name="MedicalSchdule.Pharmacy" title="the pharmcy name where you brought medications"
                        class="create-logtxts" required />
                </div>
            </li>
            <li>
                <div class="tldiv" style="width: 35%">
                    <h6>
                        Do you want to be notified?</h6>
                </div>
                <div class="trdiv" style="width: 55%">
                    <input type="checkbox" id="r" value="true" name="MedicalSchdule.SendNotification" />Yes
                </div>
            </li>
            <li>
                <div class="tldiv" style="width: 35%">
                    <h6>
                        Schedule</h6>
                </div>
                <div class="trdiv" style="width: 55%;">
                    <div style="float: right">
                        <img id="imgadd" src="~/Images/add.png" width="20" height="20" alt="add" />
                    </div>
                    <div>
                        <ul id="medsc" class="accordion">
                        </ul>
                    </div>
                </div>
            </li>
            <li>
                <div class="tldiv" style="width: 35%">
                    <h6>
                        Add document</h6>
                </div>
                <div class="trdiv" style="width: 55%">
                    <input type="file" name="msfiles" title="Select the Document" multiple="multiple" />
                </div>
            </li>
            <li>
                <div style="float: right">
                    <input type="button" id="btnMsSave" value="Save" class="greengrad" />
                    <input type="button" name="cancel" value="Close" class="graygrad" />
                </div>
            </li>
        </ul>
    </div>
    </form>
    <div id="schedule" class="slide">
        <ul style="display: inline-block; padding: 13px 13px">
            <li>
                <div class="tldiv">
                    Medicine name:
                </div>
                <div class="trdiv">
                    <input type="text" id="MedicineName" title="Enter Name of the Medicine" class="create-logtxts"
                        required />
                </div>
            </li>
            <li>
                <div class="tldiv">
                    Type of medicine:
                </div>
                <div class="trdiv">
                    <input type="text" id="TypeofMedicine" title="Enter type of medicine" class="create-logtxts" />
                </div>
            </li>
            <li>
                <div class="tldiv">
                    Dosage taken:
                </div>
                <div class="trdiv">
                    <select id="dosagetaken" required>
                        <option value="1/2">1/2</option>
                        @for (int k = 1; k <= 20; k++)
                        {
                            <option value="@k">@k</option>
                        }
                    </select>
                    <select id="dtaken" required>
                        <option value="tablet(s)">tablet(s)</option>
                        <option value="drop(s)">drop(s)</option>
                        <option value="capsule(s)">capsule(S)</option>
                        <option value="tsp(s)">tsps(s)</option>
                        <option value="tbsp(s)">tbsp(s)</option>
                        <option value="puff(s)">puff(s)</option>
                        <option value="application(s)">application(s)</option>
                    </select>
                </div>
            </li>
            <li>
                <div class="tldiv">
                    Quantity:
                </div>
                <div class="trdiv">
                    <select id="quantity" required>
                        <option value="0-5">0-5</option>
                        <option value="6-10">6-10</option>
                        <option value="11-20">11-20</option>
                    </select>
                </div>
            </li>
            <li>
                <div style="border-bottom: 1px solid rgb(128, 128, 128); display: inline">
                    <h4>
                        Schedule:</h4>
                </div>
                <div class="tldiv">
                    Frequency:
                </div>
                <div class="trdiv">
                    <select id="frequencyTaken" required>
                        <option value="as needed">as needed</option>
                        <option value="every 1hr">Every 1hr</option>
                        <option value="every 2hrs">Every 2hrs</option>
                        <option value="every 3hrs">Every 3hrs</option>
                        <option value="every 4hrs">Every 4hrs</option>
                        <option value="every morning">Every morning</option>
                        <option value="every evening">Every evening</option>
                        <option value="once a day">Once a day</option>
                        <option value="2times a day">2times a day</option>
                        <option value="3times a day">3times a day</option>
                        <option value="4times a day">4times a day</option>
                        <option value="once a week">once a week</option>
                        <option value="twice a week">twice a week</option>
                        <option value="thrice a week">thrice a week</option>
                        <option value="4 times a week">4 times a week</option>
                        <option value="before bed">before bed</option>
                        <option value="before meals">before meals</option>
                        <option value="after meals">after meals</option>
                        <option value="with meals">with meals</option>
                    </select>
                    <div id="txt" style="display: inline-block; width: 100%;">
                        <img id="imgaddfrq" src="~/Images/add.png" width="20" height="20" style="float: right"
                            alt="add" />
                        <div id="texts">
                            <input type="text" name="time[0]" placeholder="HH:MM" />
                        </div>
                    </div>
                </div>
            </li>
        </ul>
        <div style="width: 100%" class="inline">
            <input type="button" name="slidecancel" value="Cancel" style="float: right" class="graygrad" />
            <input type="button" id="schedulsave" value="Save" style="float: right; margin-right: 10px;"
                class="greengrad" />
        </div>
    </div>
</div>
