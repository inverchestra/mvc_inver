<div id="UpdateProcedures" class="bluegrad" style="width: 480px">
    <h2 class="h3border">
        Medical test</h2>
    <form id="frmUMTestId" enctype="multipart/form-data" class="crtproc">
    <ul style="display: inline-block;">
        <li class="labelnormal">Medical test name:<span style="font-weight: 600; padding: 15px 0px 0px 2px;
            color: rgb(251, 2, 2); font-size: medium;">*</span> </li>
        <li>
            <input type="hidden" name="MedicalTests.CaseId" value="@Model.MedicalTests.CaseId" />
            <input type="hidden" name="MedicalTests.MedicalTestId" value="@Model.MedicalTests.MedicalTestId" />
            <input type="text" name="MedicalTests.TestName" tabindex='1' value="@Model.MedicalTests.TestName" title="Name of medical test"
id="EditMTName" class="create-logtxts" />
        </li>
        <li class="labelnormal">Date of test:<span style="font-weight: 600; padding: 15px 0px 0px 2px;
            color: rgb(251, 2, 2); font-size: medium;">*</span> </li>
        <li>
            <input type="text" name="MedicalTests.DateOfTest" tabindex='2' id="dateOfMtest2" value="@Model.MedicalTests.DateOfTest1" placeholder="MM/DD/YYYY" title="Date you Service" class="create-logtxts"/>
        </li>
        <li class="labelnormal">Do you want to be notified? </li>
        <li>
            @if (Model.MedicalTests.IsNotify == false)
            {
                <div style="float: left; width: 40%;">
                    <input type="radio" name="MedicalTests.IsNotify" value="true"  tabindex='3'/>&nbsp;Yes
                </div>
                <div style="float: left; width: 40%;">
                    <input type="radio" name="MedicalTests.IsNotify" value="false" checked="checked" tabindex='4' />&nbsp;No
                </div>
            }
            else if (Model.MedicalTests.IsNotify == true)
            {
                <div style="float: left; width: 40%;">
                    <input type="radio" name="MedicalTests.IsNotify" value="true" checked="checked" />&nbsp;Yes
                </div>
                <div style="float: left; width: 40%;">
                    <input type="radio" name="MedicalTests.IsNotify" value="false" />&nbsp;No
                </div>
            }
            <input type="text" id="dateofmtestnotify2" name="MedicalTests.NotifyDate" tabindex='5' placeholder="MM/DD/YYYY" title="Notify Date" value="@Model.MedicalTests.NotifyDate" pattern="(0[1-9]|1[012])[- /.](0[1-9]|[12][0-9]|3[01])[- /.]\d\d\d\d" class="create-logtxts" />
        </li>
        <li class="labelnormal">Add document </li>
        <li>
            <input type="file" name="MTfiles" multiple="multiple" class="create-logtxts" tabindex='6' />
        </li>
        <li style="float: right">
            <input type="hidden" name="MedicalTests.CaseId" value="@Model.MedicalTests.CaseId" id="mcid2" />
            <input type="hidden" name="MedicalTests.MedicalTestId" value="@Model.MedicalTests.MedicalTestId"id="mtid2" />
            <div style="width: 81%" class="inline">
                <input type="button" name="btnMedTestClose" value="Cancel" style="float: right;" class="graygrad" tabindex='7'
                    onclick="$.modal.close()" />
                <input type="button" name="btnMTUpdate" value="Update" style="float: right; margin-right: 10px;" tabindex='8'
                    class="greengrad" />@*changed submit to button*@
            </div>
        </li>
    </ul>
    </form>
</div>
