<script type="text/javascript">
    $(function () {
        $('#pdate1').datepicker({
            changeYear: true,
            changeMonth: true,
            showAnim: "slideDown"
        });
        $('#pdate2').datepicker({
            changeYear: true,
            changeMonth: true
        });

        $("#frequencyTaken").change(function () {



            var selectedid = $(this).val();


            if (selectedid == "as needed") {
                $("#FQ1,#FQ2,#FQ3,#FQ4,#FQ5,#FQ6,#FQ7,#FQ8").hide();

                hdnFrequenyTaken.value = 0;

            } else if (selectedid == "Every 1hr" || selectedid == "Every 2hrs" || selectedid == "Every 3hrs" || selectedid == "Every 4hrs" || selectedid == "Every morning" || selectedid == "Every evening" || selectedid == "before bed" || selectedid == "Once a day") {
                $('#date1').timepicker();
                $("#FQ1").show();
                $("#FQ2,#FQ3,#FQ4,#FQ5,#FQ6,#FQ7,#FQ8").hide();

                hdnFrequenyTaken.value = 1;

            } else if (selectedid == "2times a day" || selectedid == "before meals" || selectedid == "after meals" || selectedid == "with meals") {
                $('#date2,#date3').timepicker();

                $("#FQ1,#FQ3,#FQ4,#FQ5,#FQ6,#FQ7,#FQ8").hide();
                $("#FQ2").show();

                hdnFrequenyTaken.value = 2;
            }
            else if (selectedid == "3times a day") {
                $('#date4,#date5,#date6').timepicker();

                $("#FQ1,#FQ2,#FQ4,#FQ5,#FQ6,#FQ7,#FQ8").hide();
                $("#FQ3").show();

                hdnFrequenyTaken.value = 3;
            }
            else if (selectedid == "4times a day") {
                $('#date7,#date8,#date9,#date10').timepicker();

                $("#FQ1,#FQ2,#FQ3,#FQ5,#FQ6,#FQ7,#FQ8").hide();
                $("#FQ4").show();

                hdnFrequenyTaken.value = 4;
            }
            else if (selectedid == "once a week") {

                $('#date11').datetimepicker();

                $("#FQ1,#FQ2,#FQ3,#FQ4,#FQ6,#FQ7,#FQ8").hide();
                $("#FQ5").show();

                hdnFrequenyTaken.value = 5;

            }
            else if (selectedid == "twice a week") {

                $('#date12,#date13').datetimepicker();

                $("#FQ1,#FQ2,#FQ3,#FQ4,#FQ5,#FQ7,#FQ8").hide();
                $("#FQ6").show();

                hdnFrequenyTaken.value = 6;
            }
            else if (selectedid == "thrice a week") {

                $('#date14,#date15,#date16').datetimepicker();

                $("#FQ1,#FQ2,#FQ3,#FQ4,#FQ5,#FQ6,#FQ8").hide();
                $("#FQ7").show();

                hdnFrequenyTaken.value = 7;
            }
            else if (selectedid == "4 times a week") {

                $('#date17,#date18,#date19,#date20').datetimepicker();

                $("#FQ1,#FQ2,#FQ3,#FQ4,#FQ5,#FQ6,#FQ7").hide();
                $("#FQ8").show();

                hdnFrequenyTaken.value = 8;
            }
        });
    });


    $("#iddosagetaken").keydown(function (event) {
        // Allow: backspace, delete, tab, escape, and enter
        if (event.keyCode == 46 || event.keyCode == 8 || event.keyCode == 9 || event.keyCode == 27 || event.keyCode == 13 ||
        // Allow: Ctrl+A
    (event.keyCode == 65 && event.ctrlKey === true) ||
        // Allow: home, end, left, right
    (event.keyCode >= 35 && event.keyCode <= 39)) {
            // let it happen, don't do anything
            return;
        }
        else {
            // Ensure that it is a number and stop the keypress
            if (event.shiftKey || (event.keyCode < 48 || event.keyCode > 57) && (event.keyCode < 96 || event.keyCode > 105) || ($(this).val().length >= 2)) {
                event.preventDefault();
            }
        }
    });

    $("#idquantity").keydown(function (event) {
        // Allow: backspace, delete, tab, escape, and enter
        if (event.keyCode == 46 || event.keyCode == 8 || event.keyCode == 9 || event.keyCode == 27 || event.keyCode == 13 ||
        // Allow: Ctrl+A
    (event.keyCode == 65 && event.ctrlKey === true) ||
        // Allow: home, end, left, right
    (event.keyCode >= 35 && event.keyCode <= 39)) {
            // let it happen, don't do anything
            return;
        }
        else {
            // Ensure that it is a number and stop the keypress
