@model IEnumerable<InnDocs.iHealth.Web.UI.Areas.iHealthUser.Models.UserRepository.Tips>
@{
    ViewBag.title = "";
}

<ul id="update1" style="border: 1px solid #d5d5d5">
    @if (Model != null && Model.Count() > 0)
    {
        foreach (var tips in Model)
        {
        <li>
            <h4 style="background-color: #eeeeee; padding: 5px; color: gray; text-align:center">Tip of the day</h4>
        </li> 

        <li class="listyleQuest" style="width: 96%; color: #585858; font-family: 'tauri' sans-serif; font-style:italic">@tips.Tip
            @* <label style="float: right; color: #585858">
                    @tips.Day
                </label>*@
            @if (tips.Status == true)
            {

                <img src="../../../../Images/read.png" alt="readmsg" height="24" title="read tips" width="24" style="float: right" />

            }
            else
            {
                <a href="#">
                    <img src="../../../../Images/unread-1.png" alt="readmsg" height="24" width="24" title="Unread tips" style="float: right; padding: 0" />
                </a>
            }
        </li>


        }
    }
    else
    {
         <h4 style="background-color: #f9f9f9; padding: 5px; color: gray; text-align:center">No tip today !</h4>
    }
</ul>

<a href="@Url.Action("ShowAllTips", "DoulaMedwall")"  style="color: rgb(202, 45, 112); float:right; font-size:small; margin-top:5px">View more</a>
<a href="@Url.Action("UnReadTips", "DoulaMedwall")"  style="color:Green; font-size:small; float:left; margin-top:5px">Unread tips</a>
@if (ViewBag.statustip == "0" || ViewBag.statustip == "" || ViewBag.statustip == null)
{
    <span id="badge-page4"></span>
}
else
{
    <span id="badge-page2">@ViewBag.statustip</span>
}
